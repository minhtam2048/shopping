<% if @user_items.count == 0 %>
  <h1>Don't have any items in your store, let's become a saler</h1>
  
<% else %>
   <div class = "row">
   
    <% @user_items.each do |user_item| %>
     
     <div class= "col-md-3">
        <a href = "/items/<%= user_item.id %>">
           <%= image_tag user_item.item_img.url(:item_index), class: "item" %>
        </a>
           <h2><%= link_to user_item.name, item_path(user_item) %></h2> 
        
     </div>
     
    <% end %>
   </div>
 
 
<% end %>
 <button> <%= link_to "Add item to your store", new_item_path %></button>