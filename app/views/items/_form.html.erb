<%= simple_form_for @item, :html => { :multipart => true }  do |f|  %>
 <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select add category") %><br />
 <%= f.file_field :item_img %>
 <%= f.label :code %>
 <%= f.text_field :code, class: "form-control"%>
 <%= f.label :name %>
 <%= f.text_field :name, class: "form-control"%>
 <%= f.input :description%>
 <%= f.label :producer %>
 <%= f.text_field :producer, class: "form-control"%>
 <%= f.submit "Create", class: "btn btn-primary" %>
 
<% end %>