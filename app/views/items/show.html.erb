<div class= "row">
  <div class="col-md-4">
  <%= image_tag @item.item_img.url(:item_show), class: "item-show" %>
  </div>

  <div class="col-md-8">
    <h2>name:     <%= @item.name %> </h2>
    <h3>Producer: <%= @item.producer %> </h3>
    <h2>Avarage rating</h2>
    <div class= "average-review-rating" data-score=<%= @average_review %>></div>
    <span>Based on <%= @item.reviews.count %> reviews</span>
    <h4>Category: <%= @item.category.name%> </h4>
    <h5>Price:    <%= @item.price %></h5>
    <p><%= @item.description %></p>
  </div>
</div>

<div class= "row">
   <div class="col-md-4">
     
     <%= render @item.reviews %>
     <div><%= link_to "Add Review", new_item_review_path(@item) %></div>
   </div>
</div>

<%= link_to "Back", items_path%>

<% if user_signed_in? %>
 <% if @item.user_id == current_user.id%>
   <%= link_to "Edit", edit_item_path(@item)%>
   <%= link_to "Delete", item_path(@item), method: :delete, data: {confirm: "Are you sure?"} %>
 <% end %> 
<% end%>

<script>
 $('.review-rating').raty({
   readOnly: true,
   path: '/assets/', 
   score: function() {
     return $(this).attr('data-score');
   }
 });
</script>


<script>
	$('.average-review-rating').raty({
		readOnly: true,
		path: '/assets/',
		score: function() {
			return $(this).attr('data-score')
		}
	});
</script>