<div class= "row">
  <div class="col-md-4">
  <%= image_tag @item.item_img.url(:item_show), class: "item-show" %>
  </div>
  
  <div class="col-md-8">
    <div class= "item-info">
     
    
     
     <h3 class = "item-producer">From: <%=link_to @item.user.name, items_path(@item.user_id) %></h3>
     <h3 class = "item-producer">Producer: <%= @item.producer %> </h3>
     
     <h2>Avarage rating</h2>
     <div class= "average-review-rating" data-score=<%= @average_review %>></div>
     <span class ="number-of-reviews">Based on <%= @item.reviews.count %> reviews</span>
     <h4>Category: <%= @item.category.name%> </h4>
     <h5>Price:    <%= @item.price %></h5>
     <%= submit_tag "Add to cart"  %>
     <p class= "item-desc"><%= @item.description %></p>
     <%
=begin%>
 <h2>see more product from<%= link_to @item.user.name,   %> 
<%
=end%>
  </div>
   
  

</div>



<div class = "row">
  <div class = "col-md-4">
    <div class ="reviews">
       <div id = 'new-review'>
          <%= render @item.reviews %>
       </div>
    </div>
  </div>
</div>
<h2>Add review</h2>
<%= render "reviews/form" %>




<div class ="links-btn-group">
  <%= link_to "Back", items_path, class: "btn btn-custom"%>
   <% if user_signed_in? %>
      <% if @item.user_id == current_user.id%>
         <%= link_to "Edit", edit_item_path(@item)%>
         <%= link_to "Delete", item_path(@item), method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %> 
   <% end%>
</div>


<canvas></canvas>

<div class="product-card">
  <div class="kb-card">
    <div class="kb-card__body kb-row">
      <div class="kb-col kb-col--50 product-card__left">
        <div class="product-card__back">
          <button>
            <i class="material-icons">arrow_back</i>
          </button>
        </div>
        <h3 class="product-card__name">
          Nook
        </h3>
        <p class="product-card__subname">
          Lounge Chair
        </p>
