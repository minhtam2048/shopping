<li>
  <%= link_to "#{category.name}(#{category.items.count})", category %>
  <% if user_signed_in? && current_user.role ==1  %>
  	<span >
    	<%= link_to "Edit", edit_category_path(category), class: "btn btn-primary edit"%>
    	<%= link_to "Delete", category, method: :delete,
                                     data: { confirm: "You sure?", remote: true },class: "delete_categories btn btn-primary delete" %>
  	</span>
  <% end %>
</li>